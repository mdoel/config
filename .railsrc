def sql(query)
  ActiveRecord::Base.connection.select_all(query)
end

def loud_logger
  set_logger_to Logger.new(STDOUT)
end

def quiet_logger
  set_logger_to nil
end

def logger_loud
  loud_logger
end

def logger_quiet
  quiet_logger
end

def set_logger_to(logger)
  ActiveRecord::Base.logger = logger
  ActiveRecord::Base.clear_active_connections!
end
